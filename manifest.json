{
  "manifest_version": 3,
  "name": "YouTube Ad Blocker Advanced",
  "version": "1.0",
  "description": "Mini uBlock Origin untuk block dan skip iklan YouTube.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
